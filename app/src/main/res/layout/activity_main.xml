<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#2CFFCDD9"

    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Song"
                android:textSize="20sp"
                android:textColor="#3B0A0D"
                android:layout_gravity="center"
            />

            <ImageView
                android:id="@+id/imgNewSong"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/baner3"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending Artist"
                        android:textSize="20sp"
                        android:textColor="#3B0A0D"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:id="@+id/imgTrendingArtist"
                        android:layout_width="wrap_content"                        android:layout_height="150dp"
                        android:src="@drawable/baner4"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="imgTop10DaySong"
                        android:textSize="20sp"
                        android:textColor="#3B0A0D"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:id="@+id/imgTop10DaySong"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/baner5" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="imgTop10WeekSong"
                        android:textSize="20sp"
                        android:textColor="#3B0A0D"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:id="@+id/imgTop10WeekSong"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/baner"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backgroundd"

        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imgSearch"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:src="@drawable/ic_baseline_search_24" />

        <ImageView
            android:id="@+id/txtTop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:src="@drawable/ic_baseline_moving_24" />


    </LinearLayout>

</RelativeLayout>